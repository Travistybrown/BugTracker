@model IEnumerable<BugTracker.Models.Ticket>

@{
    ViewData["Title"] = "All Tickets";
}

<h1>All Tickets</h1>

<div class="row layout-spacing">
    <div class="col-lg-12">
        <div class="statbox widget box box-shadow">
            <div class="widget-content widget-content-area">
                <table id="style-1" class="table style-1 dt-table-hover non-hover">
                    <thead>
                        <tr>
                            <th style="word-wrap: break-word; white-space: normal;"> @Html.DisplayNameFor(model => model.Title) </th>
                            <th> @Html.DisplayNameFor(model => model.Description)</th>
                            <th>  @Html.DisplayNameFor(model => model.Created)</th>
                            <th>@Html.DisplayNameFor(model => model.Updated)</th>
                            <th>@Html.DisplayNameFor(model => model.Archived)</th>
                            <th class="">@Html.DisplayNameFor(model => model.ArchivedByProject)</th>
                            <th class="text-center dt-no-sorting"> @Html.DisplayNameFor(model => model.Project)</th>
                            <th>
                                @Html.DisplayNameFor(model => model.TicketPriority)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TicketType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TicketStatus)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DeveloperUser)
                            </th>
                           
                            <th>
                                Edit
                            </th>

                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {

                        <tbody>
                            <tr>
                                    <td style="word-wrap: break-word; white-space: normal; col-1;">
                                    @item.Title
                                    </td>

                                <td style="word-wrap: break-word; white-space: normal;">
                                    @item.Description
                                </td>

                                <td style="word-wrap: break-word; white-space: normal;">
                                    @item.Created
                                </td>

                                <td style="word-wrap: break-word; white-space: normal;">
                                    @item.Updated
                                </td>
                               @* <td>@Html.DisplayNameFor(model => item.Archived)</td>*@

                                <td style="word-wrap: break-word; white-space: normal; checkbox">
                                    @item.ArchivedByProject
                                </td>

                                <td style="word-wrap: break-word; white-space: normal;">
                                    @item.Project.Description
                                    </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                </td>
                                <td style="word-wrap: break-word; white-space: normal;">
                                    @item.TicketType.Name
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeveloperUser.FullName)
                                </td>
                                <td>

                                </td>
                                
                         
                                <td class="text-center">
                                    <div class="dropdown">
                                        <a class="dropdown-toggle; p-3" href="#" role="button" id="dropdownMenuLink1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="true" p>
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                        </a>

                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink1">
                                            <a class="dropdown-item"  asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                            <a class="dropdown-item"  asp-action="Details" asp-route-id="@item.Id">Details</a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <span>|</span>
                                                if (item.Archived == false)
                                                {
                                                    <a class="dropdown-item"  asp-action="Archive" asp-route-id="@item.Id">Archive</a>
                                                }
                                                else
                                                {
                                                    <a class="dropdown-item"  asp-action="Restore" asp-route-id="@item.Id">Restore</a>
                                                }

                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            

                        </tbody>
                    }
                    </table>
                </div>
            </div>
        </div>
    </div>

